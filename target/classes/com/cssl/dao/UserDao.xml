<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cssl.dao.UserDao">


    <insert id="insertUser" parameterType="TbUser" keyColumn="id" keyProperty="id">
        INSERT INTO tb_user (username,PASSWORD,phone,created) VALUES(#{username},#{password},#{phone},'2018-09-21');
    </insert>

    <select id="selectName" resultType="TbUser">
        select * from tb_user where username=#{username}
    </select>

    <select id="selectPhone" resultType="TbUser">
        select * from tb_user where phone=#{phone}
    </select>

    <select id="selectList" resultType="map">
        SELECT o.`create_time`,o.`order_id`,s.nick_name,oi.`title`,o.`payment`,o.`status`
         FROM tb_order o
        LEFT JOIN tb_order_item oi ON o.`order_id`=oi.`order_id`
        LEFT JOIN tb_seller s ON o.`seller_id`=s.`seller_id`
        WHERE o.`user_id`= #{username}
    </select>

    <select id="selectUser" resultType="TbUser">
        SELECT * FROM tb_user
         <where>
             <if test="username!=null and username!=''">
                 or username=#{username}
             </if>
             <if test="phone !=null and phone !='' ">
                 or phone=#{phone}
             </if>
             <if test="password !=null and password !=''">
                 and password=#{password}
             </if>
         </where>
    </select>

</mapper>